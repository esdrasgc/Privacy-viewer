{
    "manifest_version": 2,
    "name": "Canvas Fingerprint Detector",
    "version": "1.0",
    "description": "Detecta t√©cnicas de canvas fingerprinting",
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "permissions": [
      "tabs",
      "webRequest",
      "webRequestBlocking",
      "cookies",
      "<all_urls>"
    ],
    "browser_action": {
      "default_title": "Monitor Canvas"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content-script.js"],
        "run_at": "document_start"  
      }
    ]
  }
  